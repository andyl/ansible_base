[Unit]
Description=Airflow scheduler daemon
After=network.target 

[Service]
EnvironmentFile=/etc/sysconfig/airflow
User={{rem_user}}
Group={{rem_user}}
Type=simple
ExecStart=/bin/airflow scheduler
Restart=always
RestartSec=5s

[Install]
WantedBy=multi-user.target
